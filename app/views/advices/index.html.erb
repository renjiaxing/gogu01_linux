<div class="main">
  <div class="container">
    <ol class="breadcrumb margin-top-20">
      <li class="active"><a href="#">所有建议</a></li>
    </ol>
    <div class="row margin-top-20 margin-bottom-40">
      <!-- BEGIN CONTENT -->
      <div class="col-md-12 col-sm-12">
        <div class="content-page">
          <div class="row">
            <!-- BEGIN LEFT SIDEBAR -->
            <div class="col-md-12 col-sm-12 blog-posts margin-top-10 margin-bottom-40">
              <div class="portlet box red">
                <div class="portlet-title">
                  <div class="caption">
                    所有建议
                  </div>
                </div>
                <div class="portlet-body">
                  <div id="sample_1_wrapper margin-bottom-30" class="dataTables_wrapper no-footer">
                    <div class="table-scrollable">
                      <%= grid(@grid_advices) do |g|

                        g.column name: '序号', attribute: 'id' do |task|
                          task.id
                        end

                        g.column name: '标题', attribute: 'title' do |task|
                          task.title
                        end

                        g.column name: '内容', attribute: 'content' do |task|
                          task.content
                        end

                      end -%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>