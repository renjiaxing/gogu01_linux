<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-push-3">
        <%= simple_form_for @micropost, class: "contact-form" do |m| %>
            <h2>发表内容</h2>

            <div class="form-group">
              <%= m.input :content, placeholder: "请输入内容", label: false, input_html: {class: 'form-control input-lg', rows: '8'} %>
            </div>
            <div class="form-group">
              <%= m.association :stock, label: false, placeholder: "输入股票代码", input_html: {class: 'form-control input-lg'} %>
            </div>
            <div class="form-group">
              <%= m.submit "提交",class: 'form-control input-lg btn-success'%>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
