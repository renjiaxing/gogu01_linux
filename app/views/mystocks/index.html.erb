<div class="login-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-push-3">
        <div class="row">
          <div class="col-sm-3">
            <div class="form-group">
              <%= link_to "新增", new_mystock_path, class: 'form-control btn-success text-center', 'data-disable-with' => "提交中" %>
            </div>
          </div>
        </div>
        <%= grid(@mystocks) do |g|
          #
          # g.column name: "编号" do |task|
          #   task.id
          # end

          g.column name: "股票代码" do |task|
            task.stock.code
          end

          g.column name: "股票名称" do |task|
            task.stock.name
          end

          g.column name: "操作" do |task|
            link_to('删除', task, method: :delete, data: {confirm: "确定删除"})
          end
        end -%>
      </div>
    </div>
  </div>
</div>

