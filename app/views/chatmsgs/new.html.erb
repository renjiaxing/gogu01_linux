<div class="main margin-bottom-80">
  <div class="container">
    <ol class="breadcrumb margin-top-20 margin-bottom-50">
      <li><a href="<%= chatmsgs_path %>">推送信息</a></li>
      <li class="active"><a href="#">新建推送信息</a></li>
    </ol>
    <div class="row margin-top-10 margin-bottom-40">
      <!-- BEGIN CONTENT -->
      <div class="col-md-12 col-sm-12">
        <div class="content-page">
          <div class="row">
            <!-- BEGIN LEFT SIDEBAR -->
            <div class="col-md-12 col-sm-12 blog-posts">
              <div class="portlet box red">
                <div class="portlet-title">
                  <div class="caption">
                    新建推送信息
                  </div>
                </div>
                <div class="portlet-body form">
                  <%= simple_form_for @chatmsg do |m| %>
                      <div class="form-body">
                        <div class="form-group">
                          <%= m.input :title, label: false, placeholder: "标题", input_html: {class: 'form-control input-lg'} %>
                        </div>

                        <div class="form-group">
                          <%= m.input :content, label: false, placeholder: "内容", input_html: {class: 'form-control input-lg'} %>
                        </div>

                        <div class="form-group">
                          <%= m.input :topshow, label: false, placeholder: "顶部信息", input_html: {class: 'form-control input-lg'} %>
                        </div>

                        <div class="form-group">
                          <%= m.input :msgtype, label: false, placeholder: "推送类型（1为安卓 2为IOS）", input_html: {class: 'form-control input-lg'} %>
                        </div>

                        <div class="form-group">
                          <%= m.association :atyresource, label: "请选择页面", input_html: {class: 'form-control input-lg'} %>
                        </div>

                        <div class="form-group">
                          <%= m.input :param1, label: false, placeholder: "参数1", input_html: {class: 'form-control input-lg'} %>
                        </div>
                      </div>
                      <div class="form-actions">
                        <%= m.submit "提交", class: 'btn btn-primary', 'data-disable-with' => "提交中" %>
                        <%= link_back %>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
