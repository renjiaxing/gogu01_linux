<div class="main">
  <div class="container">
    <ul class="breadcrumb">
      <li><a href="index.html">首页</a></li>
      <li class="active">登陆</li>
    </ul>
    <!-- BEGIN SIDEBAR & CONTENT -->
    <div class="row margin-bottom-40">
      <!-- BEGIN SIDEBAR -->
      <div class="sidebar col-md-3 col-sm-3">
        <ul class="list-group margin-bottom-25 sidebar-menu">
          <li class="list-group-item clearfix active">
            <a href="<%= new_session_path %>"><i class="fa fa-angle-right"></i> 登陆</a></li>
          <li class="list-group-item clearfix"><a href="<%= new_user_path %>"><i class="fa fa-angle-right"></i> 注册</a>
          </li>
          <li class="list-group-item clearfix">
            <a href="<%= new_password_reset_path %>"><i class="fa fa-angle-right"></i> 忘记密码</a></li>
          <li class="list-group-item clearfix">
            <a href="<%= root_page_path %>"><i class="fa fa-angle-right"></i> 返回首页</a></li>
        </ul>
      </div>
      <!-- END SIDEBAR -->

      <!-- BEGIN CONTENT -->
      <div class="col-md-9 col-sm-9">
        <div class="row">
          <div class="col-md-7 col-sm-7">
            <div class="row">
              <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                <h1>登陆</h1>
              </div>
            </div>
          </div>
        </div>
        <div class="content-form-page">
          <div class="row">
            <div class="col-md-7 col-sm-7">
              <form class="form-horizontal form-without-legend" role="form"
                    accept-charset="UTF-8" action="/sessions" method="post">
                <div style="display:none"><input name="utf8" type="hidden" value="✓"></div>
                <%= tag(:input, :type => "hidden", :name =>
                                      request_forgery_protection_token.to_s, :value =>
                                form_authenticity_token) %>

                <div class="form-group">
                  <label for="email" class="col-lg-4 control-label">邮件 <span class="require">*</span></label>

                  <div class="col-lg-8">
                    <input type="text" class="form-control" id="email" name="email">
                  </div>
                </div>
                <div class="form-group">
                  <label for="password" class="col-lg-4 control-label">密码 <span class="require">*</span></label>

                  <div class="col-lg-8">
                    <input type="password" class="form-control" id="password" name="password" type="password">
                  </div>

                </div>
                <div class="row">

                  <div class="col-lg-8 col-md-offset-4 padding-left-0">
                          <span>
                            <input class="margin-bottom-10" id="remember_me" name="remember_me" type="checkbox"
                                   value="1" checked="checked">
                          </span>
                    记住密码
                  </div>

                </div>
                <div class="row">
                  <div class="col-lg-8 col-md-offset-4 padding-left-0">
                    <a href="<%= new_password_reset_path %>">忘记密码?</a>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                    <button type="submit" class="btn btn-primary">登陆</button>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-10 padding-right-30">
                    <hr>
                    <!--<div class="login-socio">-->
                    <!--<p class="text-muted">或者选择其他账号登陆：</p>-->
                    <!--<ul class="social-icons">-->
                    <!--<li><a href="javascript:;" data-original-title="facebook" class="facebook" title="facebook"></a>-->
                    <!--</li>-->
                    <!--<li><a href="javascript:;" data-original-title="Twitter" class="twitter" title="Twitter"></a>-->
                    <!--</li>-->
                    <!--<li>-->
                    <!--<a href="javascript:;" data-original-title="Google Plus" class="googleplus" title="Google Plus"></a>-->
                    <!--</li>-->
                    <!--<li><a href="javascript:;" data-original-title="Linkedin" class="linkedin" title="LinkedIn"></a>-->
                    <!--</li>-->
                    <!--</ul>-->
                    <!--</div>-->
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-4 col-sm-4 pull-right">
              <div class="form-info">
                <h2>还<em>没有</em>账号</h2>

                <p>不要犹豫，马上加入股刺网吧~</p>

                <a type="button" class="btn btn-default" href="<%= new_user_path %>">立刻加入</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END CONTENT -->
    </div>
    <!-- END SIDEBAR & CONTENT -->
  </div>
</div>

