<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-push-3">
        <form class="signup-form" accept-charset="UTF-8" action="/sessions" method="post">
          <div style="display:none"><input name="utf8" type="hidden" value="✓"></div>
          <%= tag(:input, :type => "hidden", :name =>
                  request_forgery_protection_token.to_s, :value =>
                          form_authenticity_token) %>
          <h2>请用户登录</h2>

          <div class="form-group">
            <input class="form-control input-lg" id="email" name="email" placeholder="邮件地址" type="text">
          </div>
          <div class="form-group">
            <input class="form-control input-lg" id="password" name="password" placeholder="密码" type="password">
          </div>
          <div class="field">
            <label class="checkbox vsmall" for="remember_me">
              <input id="remember_me" name="remember_me" type="checkbox" value="1">
              记住密码
            </label>
          </div>
          <div class="signup-feedback alert alert-danger hidden"></div>
          <div class="form-group">
            <input class="form-control input-lg btn-success" type="submit" value="登录">
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <a class="form-control input-lg btn-success register_color" href="/users/new">注册</a>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <a class="form-control input-lg btn-success register_color" href="/password_resets/new">忘记密码</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


