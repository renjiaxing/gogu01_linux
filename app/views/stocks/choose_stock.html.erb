<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-push-3">
        <%= simple_form_for @stock,url: show_stock_microposts_path, class: "contact-form" do |m| %>
            <h2>搜索股票名字</h2>

            <div class="form-group">
              <%= m.input :id, collection: Stock.all, label: false, placeholder: "输入股票代码", input_html: {class: 'form-control input-lg'} %>
            </div>
            <div class="form-group">
              <%= m.submit "提交",class: 'form-control input-lg btn-success'%>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
