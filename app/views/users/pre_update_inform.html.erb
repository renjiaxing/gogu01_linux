<div class="login-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-push-3">
        <%= simple_form_for @user, url: update_inform_users_path, method: :post do |m| %>
            <h2>修改信息</h2>

            <div class="form-group">
              <%= m.input :name, placeholder: "输入用户名", label: false, input_html: {class: 'form-control input-lg', rows: '8'} %>
            </div>
            <div class="form-group">
              <%= m.input :phone, placeholder: "输入手机号码", label: false, input_html: {class: 'form-control input-lg', rows: '8'} %>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <%= m.submit "提交", class: 'form-control input-lg btn-success' %>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <%= link_back %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
