    <li><i class="fa fa-heart"></i><%= link_to m.goods.size.to_s, new_session_path%>
<% elsif current_user.begoods.exists?(m) %>
    <li><i class="fa fa-heart"></i><%= link_to m.goods.size.to_s, cancel_good_micropost_path(m),
                remote: true %>
