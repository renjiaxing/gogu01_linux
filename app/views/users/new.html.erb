<div class="main">
  <div class="container">
    <ul class="breadcrumb">
      <li><a href="index.html">首页</a></li>
      <li class="active">注册</li>
    </ul>
    <!-- BEGIN SIDEBAR & CONTENT -->
    <div class="row margin-bottom-40">
      <!-- BEGIN SIDEBAR -->
      <div class="sidebar col-md-3 col-sm-3">
        <ul class="list-group margin-bottom-25 sidebar-menu">
          <li class="list-group-item clearfix">
            <a href="<%= new_session_path %>"><i class="fa fa-angle-right"></i> 登陆</a></li>
          <li class="list-group-item clearfix active">
            <a href="<%= new_user_path %>"><i class="fa fa-angle-right"></i> 注册</a>
          </li>
          <li class="list-group-item clearfix">
            <a href="<%= new_password_reset_path %>"><i class="fa fa-angle-right"></i> 忘记密码</a></li>
          <li class="list-group-item clearfix">
            <a href="<%= root_page_path %>"><i class="fa fa-angle-right"></i> 返回首页</a></li>
        </ul>
      </div>
      <!-- END SIDEBAR -->

      <!-- BEGIN CONTENT -->
      <div class="col-md-9 col-sm-9">
        <div class="row">
          <div class="col-md-7 col-sm-7">
            <div class="row">
              <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                <h1>创建用户</h1>
              </div>
            </div>
          </div>
        </div>
        <div class="content-form-page">
          <div class="row">
            <div class="col-md-7 col-sm-7">
              <form class="form-horizontal" role="form" accept-charset="UTF-8" action="/users" method="post">
                <div style="display:none"><input name="utf8" type="hidden" value="✓"></div>
                <%= tag(:input, :type => "hidden", :name =>
                  request_forgery_protection_token.to_s, :value =>
                                      form_authenticity_token) %>
                <%=render 'error_message'%>
                <fieldset>
                  <div class="form-group">
                    <label for="email" class="col-lg-4 control-label" >邮件地址
                      <span class="require">*</span></label>

                    <div class="col-lg-8">
                      <input type="text" class="form-control" id="user_email" name="user[email]">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="phone" class="col-lg-4 control-label">手机号</label>

                    <div class="col-lg-8">
                      <input type="text" class="form-control" id="user_phone" name="user[phone]">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="password" class="col-lg-4 control-label">密码 <span class="require">*</span></label>

                    <div class="col-lg-8">
                      <input type="password" class="form-control" id="user_password" name="user[password]">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="user_password_confirmation" class="col-lg-4 control-label">确认密码 <span class="require">*</span></label>

                    <div class="col-lg-8">
                      <input type="password" class="form-control" id="user_password_confirmation" name="user[password_confirmation]">
                    </div>
                  </div>

                </fieldset>

                <div class="row">
                  <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                    <button type="submit" class="btn btn-primary">创建用户</button>
                    <!--<button type="button" class="btn btn-default">Cancel</button>-->
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-4 col-sm-4 pull-right">
              <div class="form-info">
                <h2><em>已有</em> 账户</h2>
                <p>马上登陆吧~</p>
                <a type="button" class="btn btn-default" href="<%= new_session_path %>">马上登陆</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END CONTENT -->
    </div>
    <!-- END SIDEBAR & CONTENT -->
  </div>
</div>

