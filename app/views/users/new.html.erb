<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-push-3">
        <form class="signup-form" accept-charset="UTF-8" action="/users" method="post">
          <div style="display:none"><input name="utf8" type="hidden" value="✓"></div>
          <%= tag(:input, :type => "hidden", :name =>
                  request_forgery_protection_token.to_s, :value =>
                          form_authenticity_token) %>
          <h2>用户注册</h2>

          <div class="form-group">
            <input class="form-control input-lg" id="user_name" name="user[name]" placeholder="Name" type="text">
          </div>
          <div class="form-group">
            <input class="form-control input-lg" id="user_email" name="user[email]" placeholder="Email" type="text">
          </div>
          <div class="form-group">
            <input class="form-control input-lg" id="user_phone" name="user[phone]" placeholder="Phone number" type="text">
          </div>
          <div class="form-group">
            <input class="form-control input-lg" id="user_password" name="user[password]" placeholder="Password" type="password">
          </div>
          <div class="form-group">
            <input class="form-control input-lg" id="user_password_confirmation" name="user[password_confirmation]" placeholder="Repeat Password" type="password">
          </div>

          <div class="signup-feedback alert alert-danger hidden"></div>
          <div class="form-group">

            <button class="btn btn-lg btn-success" type="submit">
              注册
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

